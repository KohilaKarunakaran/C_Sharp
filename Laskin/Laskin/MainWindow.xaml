<Window x:Class="Laskin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laskin"
        mc:Ignorable="d"
            Title="MainWindow" Height="440" Width="750">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="EqualsButton" Content="=" Grid.Row="0" Grid.Column="0" FontSize="36" Click="EqualsButton_Click" />
        <TextBox x:Name="Display" Grid.Row="0" Grid.Column="1" FontSize="36" Background="#FF9BF8D4" TextAlignment="Center"/>
        <CheckBox x:Name="Division" Content="Jakolasku" Grid.Row="0" Grid.Column="2" FontSize="36" Checked="Division_Checked"/>

        <Button x:Name="one" Content="1" Grid.Row="1" Grid.Column="0" FontSize="36" Click="Button_Click" />
        <Button x:Name="two" Content="2" Grid.Row="1" Grid.Column="1" FontSize="36" Click="Button_Click" />
        <Button x:Name="three" Content="3" Grid.Row="1" Grid.Column="2" FontSize="36" Click="Button_Click" />

        <Button x:Name="four" Content="4" Grid.Row="2" Grid.Column="0" FontSize="36" Click="Button_Click" />
        <Button x:Name="five" Content="5" Grid.Row="2" Grid.Column="1" FontSize="36" Click="Button_Click" />
        <Button x:Name="six" Content="6" Grid.Row="2" Grid.Column="2" FontSize="36" Click="Button_Click" />

        <Button x:Name="seven" Content="7" Grid.Row="3" Grid.Column="0" FontSize="36" Click="Button_Click" />
        <Button x:Name="eight" Content="8" Grid.Row="3" Grid.Column="1" FontSize="36" Click="Button_Click" />
        <Button x:Name="nine" Content="9" Grid.Row="3" Grid.Column="2" FontSize="36" Click="Button_Click" />

    </Grid>
</Window>
